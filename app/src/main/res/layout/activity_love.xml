<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_title"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginStart="@dimen/x20"
        android:text="@string/activity_love_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_title"
        android:layout_toEndOf="@+id/tv_title"
        android:layout_alignBottom="@+id/tv_title"
        android:layout_width="@dimen/x200"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_sort"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginStart="@dimen/x20"
        android:text="@string/activity_love_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/spinner_sort"
        android:layout_toEndOf="@+id/tv_sort"
        android:layout_alignBottom="@+id/tv_sort"
        android:layout_width="@dimen/x200"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_cancel"
        android:text="@string/cancel"
        android:layout_marginTop="@dimen/x10"
        android:layout_alignStart="@+id/tv_sort"
        android:layout_below="@id/tv_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_sure"
        android:text="@string/sure"
        android:layout_marginStart="@dimen/x10"
        android:layout_alignBottom="@+id/tv_cancel"
        android:layout_toEndOf="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
